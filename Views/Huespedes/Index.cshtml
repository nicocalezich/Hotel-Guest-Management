@model IEnumerable<ProyectoHotelNT1.Models.Huespedes>

@{
    ViewData["Title"] = "Huespedes";
}

<h2 class="titulo">Huespedes</h2>

<div class="informacion">
    <div class="itemInfo">
        <h4> <i class="fas fa-arrow-right"></i> Huespedes activos: @ViewBag.totales </h4>
    </div>
</div>
<p>
    <a asp-action="Create"> <i class="fas fa-plus"></i> Nuevo huesped</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Nro. habitacion</strong>
            </th>
            <th>
                <strong>Nombre</strong>
            </th>
            <th>
                <strong>Apellido</strong>
            </th>
            <th>
                <strong>DNI</strong>
            </th>
            <th>
                <strong>Fecha ingreso</strong>
            </th>
            <th>
                <strong>Fecha salida</strong>
            </th>
            <th>
                <strong>Dias hospedado </strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    Nro. @Html.DisplayFor(modelItem => item.NroHabitacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEgreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiasHospedado) Dias
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i> Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
